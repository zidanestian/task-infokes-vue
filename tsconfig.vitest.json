{
  "extends": "./tsconfig.app.json",
  "exclude": [],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node", "jsdom", "vitest/globals", "@testing-library/jest-dom"],
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.spec.ts",
    "src/test/**/*.ts"
  ]
} 